# =====================================================
# GateWey Requisition Management System
# Main .htaccess Configuration
# File Location: /requisition-app/.htaccess (root)
# =====================================================

# ===== REWRITE ENGINE =====
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /requisition-app/
    
    # Force HTTPS (uncomment in production with SSL certificate)
    # RewriteCond %{HTTPS} !=on
    # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Remove trailing slashes
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [R=301,L]
    
    # Prevent access to hidden files and directories
    RewriteCond %{SCRIPT_FILENAME} -d [OR]
    RewriteCond %{SCRIPT_FILENAME} -f
    RewriteRule "(^|/)\." - [F]
</IfModule>

# ===== PREVENT DIRECTORY LISTING =====
Options -Indexes

# ===== DISABLE SERVER SIGNATURE =====
ServerSignature Off

# ===== PROTECT SENSITIVE FILES =====
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# ===== PROTECT CONFIGURATION DIRECTORY =====
<IfModule mod_alias.c>
    RedirectMatch 403 ^/requisition-app/config/
</IfModule>

# ===== PROTECT CLASSES DIRECTORY =====
<IfModule mod_alias.c>
    RedirectMatch 403 ^/requisition-app/classes/
</IfModule>

# ===== PROTECT HELPERS DIRECTORY =====
<IfModule mod_alias.c>
    RedirectMatch 403 ^/requisition-app/helpers/
</IfModule>

# ===== PROTECT LOGS DIRECTORY =====
<IfModule mod_alias.c>
    RedirectMatch 403 ^/requisition-app/logs/
</IfModule>

# ===== PROTECT INCLUDES DIRECTORY =====
<IfModule mod_alias.c>
    RedirectMatch 403 ^/requisition-app/includes/
</IfModule>

# ===== SECURITY HEADERS =====
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Enable XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://code.jquery.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: https:; connect-src 'self';"
    
    # Permissions Policy
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    
    # Remove X-Powered-By header
    Header unset X-Powered-By
    
    # Strict Transport Security (HSTS) - uncomment when using HTTPS
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# ===== PHP SECURITY SETTINGS =====
<IfModule mod_php7.c>
    # Disable dangerous functions
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log logs/error.log
    
    # Hide PHP version
    php_flag expose_php Off
    
    # Session security
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 0
    php_value session.use_only_cookies 1
    php_value session.cookie_samesite Strict
    
    # File upload limits
    php_value upload_max_filesize 5M
    php_value post_max_size 6M
    php_value max_execution_time 30
    php_value max_input_time 60
    php_value memory_limit 128M
    php_value max_file_uploads 10
    
    # Disable dangerous PHP functions
    php_value disable_functions "exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source"
</IfModule>

# ===== COMPRESSION FOR PERFORMANCE =====
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
    
    # Don't compress images
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp)$ no-gzip dont-vary
</IfModule>

# ===== BROWSER CACHING =====
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML and data - no caching
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType application/xml "access plus 0 seconds"
</IfModule>

# ===== ERROR DOCUMENTS =====
ErrorDocument 400 /requisition-app/errors/400.php
ErrorDocument 401 /requisition-app/errors/401.php
ErrorDocument 403 /requisition-app/errors/403.php
ErrorDocument 404 /requisition-app/errors/404.php
ErrorDocument 500 /requisition-app/errors/500.php
ErrorDocument 503 /requisition-app/errors/503.php

# ===== CHARACTER ENCODING =====
AddDefaultCharset UTF-8
AddCharset UTF-8 .html .css .js .xml .json .rss .atom .php

# ===== PREVENT ACCESS TO VERSION CONTROL =====
RedirectMatch 404 /\.git
RedirectMatch 404 /\.svn
RedirectMatch 404 /\.hg

# ===== PREVENT ACCESS TO COMPOSER FILES =====
<FilesMatch "^(composer\.json|composer\.lock|package\.json|package-lock\.json)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ===== PREVENT ACCESS TO ENV FILES =====
<FilesMatch "^\.env">
    Order allow,deny
    Deny from all
</FilesMatch>

# ===== LIMIT REQUEST METHODS =====
<LimitExcept GET POST HEAD>
    Order allow,deny
    Deny from all
</LimitExcept>

# ===== PREVENT ACCESS TO SQL FILES =====
<FilesMatch "\.(sql|sqlite|db)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ===== BLOCK BAD BOTS AND SCRAPERS =====
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_USER_AGENT} (libwww-perl|wget|python|nikto|curl|scan|java|winhttp|clshttp|loader) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (;|<|>|'|"|\)|\(|%0A|%0D|%27|%3C|%3E|%00) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (bot|spider|crawl|scrape) [NC]
    RewriteCond %{HTTP_USER_AGENT} !(googlebot|bingbot) [NC]
    RewriteRule ^.* - [F,L]
</IfModule>

# ===== PREVENT HOTLINKING OF IMAGES =====
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?yourdomain\.com [NC]
    RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,NC,L]
</IfModule>

# ===== BLOCK ACCESS TO BACKUP AND LOG FILES =====
<FilesMatch "\.(bak|backup|log|old|orig|save|swp|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ===== ETAG REMOVAL FOR SECURITY =====
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# ===== MIME TYPE CONFIGURATION =====
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    AddType application/x-font-ttf .ttf
</IfModule>

# ===== END OF .HTACCESS =====
